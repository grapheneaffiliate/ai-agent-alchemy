# MCP AI Agent Environment Variables
# Copy this file to .env and fill in your actual values

# Your env file is now gitignored for security - this file safely shows what keys you need

# News API Keys (get from newsapi.org)
NEWSAPI_KEY=your_newsapi_key_here
SERPER_API_KEY=your_serper_key_here

# OpenAI/Claude API keys for LLM integration
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# GitHub Personal Access Token (optional, for GitHub integration)
GITHUB_TOKEN=your_github_token_here

# MCP Server configurations
PHOTONIC_SIM_PYTHON=python3  # Path to Python with Meep for photonic simulations
MEMORY_BASE=path/to/obsidian/vault  # Path to Obsidian memory vault

# Server settings
PORT=3000  # Default port for web interface
DEBUG=true  # Enable debug mode

# Database/cache settings (if needed)
REDIS_URL=redis://localhost:6379  # Redis connection string
DB_PATH=./data/agent.db  # SQLite database path

# Sensitive keys are kept out of version control
# Never commit your .env file!
